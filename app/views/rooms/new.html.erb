<%= provide(:title, "Become a Host") %>
<div class="card container d-flex justify-content-center mt-4">
    <div class="card-header">
        <h3>Create your beautiful place<h3>
    </div>
    <%= form_for(@room) do |f| %>
    <div class="card-body row justify-content-center">
        <div class="form-group mx-5">
            <h6>Home Type</h6>
            <%= f.select :home_type, options_for_select([
                                ["Condominium"],
                                ["Resort"],
                                ["Hotel"],
                                ["Beach House"], 
                                ["Apartment"],
                                ["Capsule Room"]
                            ]), include_blank: true, class: "col-12" %>
        </div>
        <div class="form-group mx-5">
            <h6>Room Type</h6>
            <%= f.select :room_type, options_for_select([
                                ["Entire"],
                                ["Private"],
                                ["Shared"]
                            ]), include_blank: true, class: "col-12" %>
        </div>
        <div class="form-group mx-5">
            <h6>Accommodate</h6>
            <%= f.select :accommodate, options_for_select([
                                ["1"],
                                ["2"],
                                ["3"],
                                ["4+"]
                            ]), include_blank: true, class: "col-12" %>
        </div>
        <div class="form-group mx-5">
            <h6>Bedroom</h6>
            <%= f.select :bedroom, options_for_select([
                                ["1"],
                                ["2"],
                                ["3"],
                                ["4+"]
                            ]), include_blank: true, class: "col-12" %>
        </div>
        <div class="form-group mx-5">
            <h6>Bathroom</h6>
            <%= f.select :bathroom, options_for_select([
                                ["1"],
                                ["2"],
                                ["3"],
                                ["4+"]
                            ]), include_blank: true, class: "col-12" %>
        </div>
        </div>
            <div class="text-center pb-4">
                <%= f.submit class: "btn btn-outline-dark" %>
            </div>
        </div>
    <% end %>
</div>