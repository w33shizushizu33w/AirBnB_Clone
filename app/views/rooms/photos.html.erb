<%= provide(:title, "Photo") %>
<div class="row mx-4">
    <div class="col-2">
        <%= render 'rooms/menu' %>
    </div>
    <div class="col-10">       
        <div class="card container d-flex justify-content-center mt-4">
            <div class="card-header">
                <h3>Photo<h3>
            </div>
            <%= form_for @room, url: room_images_path(@room), method: "post", html: { :multipart => true }, enctype: 'multipart/form-data' do |f| %>
            <div class="card-body text-center">
                <div class="form-group mx-4">
                    <%= file_field_tag  "images[]", type: :file, multiple: true, required: true, accept: "image/jpeg,image/gif,image/png" %>
                </div>
            </div>
            <div class="text-center pb-4">
                <%= f.submit "Update Photo", class: "btn btn-outline-dark" %>
            </div>
            <% end %>
            <div class="card-group mx-5">
                <div class="card mx-4" style="width: 18rem;">
                    <%= image_tag @room.images.first.image, class: "d-block mx-auto img-fluid w-100" %>
                    <%= link_to raw("<i class='fa fa-trash text-danger'></i>"), room_image_path(@room), method: :delete, data: { confirm: "You sure?" } %>
                </div>
                <div class="card mx-4" style="width: 18rem;">
                    <%= image_tag @room.images.second.image, class: "d-block mx-auto img-fluid w-100" %>
                    <%= link_to raw("<i class='fa fa-trash text-danger'></i>"), room_image_path(@room), method: :delete, data: { confirm: "You sure?" } %>
                </div>
                <div class="card mx-4" style="width: 18rem;">
                    <%= image_tag @room.images.third.image, class: "d-block mx-auto img-fluid w-100" %>
                    <%= link_to raw("<i class='fa fa-trash text-danger'></i>"), room_image_path(@room), method: :delete, data: { confirm: "You sure?" } %>
                <div class="card-body">
            </div>           
        </div>       
    </div>
</div>
<script type="text/javascript">
    $("#room_image").bind("change", function() {
    const size_in_megabytes = this.files[0].size/1024/1024;
        if (size_in_megabytes > 5) {
            alert("Maximum file size is 5MB. Please choose a smaller file.");
        $("#room_image").val("");
        }
    });
</script>