<%= provide(:title, "Show") %>
<div class="mt-4">
    <% @rooms.each do |room| %>
        <div class="col-10">
            <%= image_tag room.images.first.image, class: "d-block mx-auto img-fluid w-50" %>
        </div>
    <% end %>
</div>
<div class="ml-4 mt-4">   
        <h1><%= @room.listing_name %></h1>  
        <h6><%= @room.address %></h6>
</div>
<hr width="1200" align="center">
<div class="ml-4 mt-4">
    <h4>About this listings</h4>
    <h6><%= @room.summery %></h6>
</div>
<hr width="1200" align="center">
<div class="ml-4 mt-4">
    <h4>Amenities</h4>
</div>
<hr width="1200" align="center">
<div id="carouselExampleFade" class="offset-2 col-8 offset-2 carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <% @rooms.each do |room| %>
                <%= image_tag room.images.first.image, class: "d-block mx-auto img-fluid w-100" %>
            <% end %>
        </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr width="1200" align="center">
<img src="..." class="img-fluid" alt="Map image">
<div class="mt-4">
            <h1>Reviews</h1>
                <section class="offset-2 mt-3">
                    <div class="card mb-3 w-50">
                        <div class="row no-gutters">
                            <div class="col-md-2 ml-3">
                                <%= gravatar_for @user, class: "card-img" %>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h6 class="card-title"><%= @user.name %></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
        </div>
        <hr width="1200" align="center">
            <div class="ml-4 mt-4">
                <h1>Nearbys</h1>
            </div>