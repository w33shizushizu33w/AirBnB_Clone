                    <div class="row"> 
                        <%= f.hidden_field :user_id, value: current_user.id %>
                        <%= f.hidden_field :room_id, value: @room.id %>
                        <%= f.text_field :check_in_date, id: "check_in_date", class: "form-control mr-sm-2 ml-3", style: "width: 8rem;", readonly: true, placeholder: "check in" %>
                        <%= f.text_field :check_out_date, id: "check_out_date", class: "form-control mr-sm-2 ml-3", style: "width: 8rem;", readonly: true, placeholder: "check out", disabled: true %>                      
                    </div>
                <div class="row ml-3 mt-3">
                    <h6 class="mr-3">Price</h6>
                    ¥<%= @room.price %>
                </div>
                <div class="row ml-3 mt-3">
                    <h6 class="mr-3">Nights</h6>
                    <p>× <span id="nights"></span></p>
                </div>
                <div class="row ml-3 mt-3">
                    <h6 class="mr-3">Total Price</h6>
                    <p>¥ <span id="total_price"></span></p>
                </div>
            </p>
            <div class="text-center">
                <%= f.submit "Book Now", id: "reserve", class: "btn btn-dark" %>
