<%= provide(:title, "Home") %>
<h1 class="text-center mt-5"><strong>SHIZU BnB </strong>Book unique homes</h1>
<h1 class="text-center">and experience a city like a local.</h1>
<%= form_tag search_path, :method => :get do %>
<div class="d-flex justify-content-center form-inline mx-3 my-lg-5"> 
    <%= text_field_tag :search, params[:search], placeholder: "Location Address", class: "form-control mr-sm-2 ml-3" %>
    <%= text_field_tag :check_in_date, params[:check_in_date], id: "check_in_date", placeholder: "check in", class: "form-control mr-sm-2 ml-3" %>
    <%= text_field_tag :check_out_date, params[:check_out_date], id: "check_out_date", placeholder: "check out", class: "form-control mr-sm-2 ml-3" %>
    <%= submit_tag "Search", class: "btn btn-outline-dark" %>
<% end %>
</div>
<hr width="1200" align="center">
<div class="ml-5 mt-5">
    <h1>Homes</h1>
</div>
<div class="card-group mx-5">
    <% @rooms.first(3).each do |room| %>
        <div class="card mx-4" style="width: 18rem;">
            <% if room.images.present? %>
                <%= image_tag room.images.first.image, class: "d-block mx-auto img-fluid w-100" %>
            <% else %>
                <%= image_tag "no_image.jpg", class: "d-block mx-auto img-fluid w-100" %>
            <% end %>
                <div class="card-body">
                    <h4 class="card-text"><%= link_to room.listing_name, room_path(room.id) %></h4>
                    <p class="card-text"><%= room.summery %></p>
                </div>
        </div>
    <% end %>
</div>
<div class="ml-5 mt-5">
    <h1>Cities</h1>
</div>
<div id="carouselExampleFade" class="offset-2 col-8 offset-2 carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <%= image_tag "image2.jpg", class: "d-block mx-auto img-fluid w-100" %>
        </div>
        <div class="carousel-item">
            <%= image_tag "image1.jpg", class: "d-block mx-auto img-fluid w-100" %>
        </div>
        <div class="carousel-item">
            <%= image_tag "image3.jpg", class: "d-block mx-auto img-fluid w-100" %>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

